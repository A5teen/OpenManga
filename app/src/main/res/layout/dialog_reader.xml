<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingLeft="6dp"
            android:paddingStart="6dp"
            tools:ignore="RtlSymmetry">

            <LinearLayout
                android:id="@+id/block_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_weight="1"
                android:background="?selectableItemBackground"
                android:clickable="true"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:text="Medium Text"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

                <TextView
                    android:id="@+id/textView_subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableEnd="@drawable/ic_drop_down_dark"
                    android:drawableRight="@drawable/ic_drop_down_dark"
                    android:gravity="center_vertical"
                    android:maxLines="2"
                    android:text="SmallText"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small" />

                <ProgressBar
                    android:id="@+id/progressBar"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:indeterminate="false" />
            </LinearLayout>

            <Button
                android:id="@+id/imageButton_goto"
                style="@style/FlatMenuButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/ic_swap_horiz_dark"
                android:text="0/0" />

        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="2dp"
            android:background="@android:color/darker_gray" />

        <Button
            android:id="@+id/button_fav"
            style="@style/FlatMenuButton.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_favorite_outline_dark"
            android:drawableStart="@drawable/ic_favorite_outline_dark"
            android:text="@string/action_favourite" />

        <Button
            android:id="@+id/button_save"
            style="@style/FlatMenuButton.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_save_dark"
            android:drawableStart="@drawable/ic_save_dark"
            android:text="@string/action_save" />

        <Button
            android:id="@+id/button_share"
            style="@style/FlatMenuButton.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_share_dark"
            android:drawableStart="@drawable/ic_share_dark"
            android:text="@string/action_share" />

        <Button
            android:id="@+id/button_img"
            style="@style/FlatMenuButton.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_image_dark"
            android:drawableStart="@drawable/ic_image_dark"
            android:text="@string/save_image" />

        <Button
            android:id="@+id/button_opt"
            style="@style/FlatMenuButton.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableEnd="@drawable/ic_drop_down_dark"
            android:drawableLeft="@drawable/ic_settings_dark"
            android:drawableRight="@drawable/ic_drop_down_dark"
            android:drawableStart="@drawable/ic_settings_dark"
            android:text="@string/action_options" />

        <LinearLayout
            android:id="@+id/block_options"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:visibility="gone">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="2dp"
                android:background="@android:color/darker_gray" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/scrolling_direction"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <android.support.v7.widget.AppCompatSpinner
                android:id="@+id/spinner_direction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:entries="@array/directions"
                android:minHeight="?android:listPreferredItemHeightSmall" />

            <android.support.v7.widget.SwitchCompat
                android:id="@+id/switch_keepscreen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checked="true"
                android:minHeight="?android:listPreferredItemHeightSmall"
                android:text="@string/keep_screen" />

            <android.support.v7.widget.SwitchCompat
                android:id="@+id/switch_volkeyscroll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checked="false"
                android:minHeight="?android:listPreferredItemHeightSmall"
                android:text="@string/scroll_by_volkeys" />

            <android.support.v7.widget.SwitchCompat
                android:id="@+id/switch_brightness"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="?android:listPreferredItemHeightSmall"
                android:text="@string/adjust_brightness" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_brightness_darker"
                    android:contentDescription="@string/brightness_value" />

                <android.support.v7.widget.AppCompatSeekBar
                    android:id="@+id/seekBar_brightness"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:enabled="false" />
            </LinearLayout>

            <Button
                android:id="@+id/button_positive"
                style="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|right"
                android:text="@string/apply" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>