<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.nv95.openmanga">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <application
        android:name=".OpenMangaApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activities.MainActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/app_name"
            android:windowSoftInputMode="adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.MangaPreviewActivity"
            android:label=""
            android:theme="@style/AppTheme.Preview"/>
        <activity
            android:name=".activities.SearchActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/search_results" />
        <activity
            android:name=".activities.MultipleSearchActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/search_results" />
        <activity android:name=".activities.ReadActivity" />
        <activity
            android:name=".activities.DownloadsActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/downloads_queue"
            android:launchMode="singleInstance" />
        <activity
            android:name=".activities.UpdatesActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/manga_updates" />
        <activity
            android:name=".activities.ProviderSelectActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/select_sources" />
        <activity
            android:name=".activities.SettingsActivity"
            android:label="@string/action_settings" />
        <activity
            android:name=".activities.WelcomeActivity"
            android:label="@string/welcome" />
        <activity
            android:name=".activities.AboutActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/about" />
        <activity
            android:name=".activities.UpdatesSettingsActivity"
            android:label="@string/checking_new_chapters">
            <intent-filter>
                <action android:name="org.nv95.openmanga.chupd" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.FileSelectActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/select_file" />
        <activity
            android:name=".activities.CBZActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/import_file"
            android:theme="@style/AppTheme.Dialog">
            <!--intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:scheme="file" />
                <data android:host="*" />
                <data android:pathPattern=".*\\.cbz" />
            </intent-filter-->
        </activity>

        <service android:name=".SaveService" />
        <service android:name=".DownloadService" />
        <service android:name=".ChaptersSyncService" />

        <receiver android:name=".UpdateCheckerReceiver">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE" />
            </intent-filter>
        </receiver>

    </application>

</manifest>
