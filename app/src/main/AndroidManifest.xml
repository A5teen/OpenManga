<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.nv95.openmanga" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <application
        android:name=".OpenMangaApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:windowSoftInputMode="adjustResize"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MangaPreviewActivity"
            android:label=""
            android:theme="@style/AppTheme.Preview"/>
        <activity android:name=".SearchActivity"
            android:label="@string/search_results" />
        <activity android:name=".MultipleSearchActivity"
            android:label="@string/search_results" />
        <activity android:name=".ReadActivity" />
        <activity android:name=".DownloadsActivity"
            android:label="@string/downloads_queue" android:launchMode="singleInstance" />
        <activity android:name=".UpdatesActivity"
            android:label="@string/manga_updates" />
        <activity android:name=".ProviderSelectActivity" android:label="@string/select_sources" />
        <activity android:name=".SettingsActivity" android:label="@string/action_settings" />
        <activity android:name=".WelcomeActivity" android:label="@string/welcome"/>
        <activity android:name=".AboutActivity" android:label="@string/about" />
        <activity android:name=".UpdatesSettingsActivity"
            android:label="@string/checking_new_chapters">
            <intent-filter>
            <action android:name="org.nv95.openmanga.chupd" />
            <category android:name="android.intent.category.DEFAULT" />
        </intent-filter>
        </activity>
        <service android:name=".providers.SaveService" />
        <service android:name=".utils.ChaptersSyncService" />
        <receiver android:name=".utils.UpdateCheckerReceiver">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE"/>
            </intent-filter>
        </receiver>
    </application>

</manifest>
